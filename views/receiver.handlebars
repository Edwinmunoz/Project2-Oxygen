
{{> navbar}}
<div class="container" id="recieverPage">
    <div class="row">
        <div class="col s6">
            <div class="row">
                <div class="container" id="receiverForm">
                    <form class="col s12" id="new-receiver">
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="receiverName" type="text" class="validate" />
                                <label for="giverAddress">Full Name</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="receiverAddress" type="text" class="validate" />
                                <label for="giverAddress">Address</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="receiverGiftOne" type="text" class="GiftOne" />
                                <label>Gift 1</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="receiverGiftTwo" type="text" class="GiftOne" />
                                <label>Gift 2</label>
                            </div>
                        </div>
                        <div class="input-field col s12">
                            <input id="receiverGiftThree" type="text" class="GiftOne" />
                            <label>Gift 3</label>
                        </div>
                        <button class="waves-effect waves-light green darken-4 btn-large"
                            id="receiverButton">Submit</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="container" id="recieverData">
            <div class="col s6">
                {{#each gifts}}
                <form class="col s12" id="deletebutton"data-id="{{id}}"></form>
                <div class="row" id="inputBackground">
                    <div class="col s12">
                        <div class="card green darken-4">
                            <div class="card-content white-text" id="receiverDataForm">
                                <span class="card-title" id="dataName">Name {{Receiver}} </span>
                                <p id="dataAddress">Address: {{Address}}</p>
                                <p id="dataGiftOne">Gift 1 {{Gift1}}</p>
                                <p id="dataGiftTwo">Gift 2 {{Gift2}}</p>
                                <p id="dataGiftThree">Gift 3 {{Gift3}}</p>
                            </div>
                            <div class="row">
                                <div class="card-action" id="inputReceiver">
                                   <button type="submit" class="btn btn-primary" id="editReceiver" data-id="{{id}}">EDIT</button>
                                   <button class="btn btn-primary"  data-id="{{id}}">DELETE</button>
    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </form>
                {{/each}}
            </div>
        </div>
    </div>
</div>
</div>

<script type="text/javascript" src="/assets/js/newReciever.js"></script>
