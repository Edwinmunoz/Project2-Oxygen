<div class="container" id="giverTable">
    <div class="row">
        <div class="col s2">
            <p></p>
        </div>
        <div class="col s8">
            <div class="row">
                <table class="striped" class="responsive-table" class="highlight">
                    <thead id="listNames">
                        <tr>
                            <th id="giverTableName">Name</th>
                            <th id="giverTableAddress">Address</th>
                            <th id="giverTableGiftIdeas">Gift Ideas</th>
                            <th id="giverTableGiver">Giver</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td id="giverFullName">Full Name</td>
                            <td id="giverAddress">
                                1800 Address <br />
                                City, State Zip Code
                            </td>
                            <td id="giverGiftIdeas">
                                Gift Idea: Example <br />
                                Gift Idea: Example <br />
                                Gift Idea: Example
                            </td>
                            <td id="giverInput">
                                <div class="container" id="giverInputTable">
                                    <div class="row">
                                        <div class="row">
                                            <div class="input-field">
                                                <i class="material-icons prefix">account_circle</i>
                                                <input id="giverNameInput" type="text" class="validate" />
                                                <label for="icon_prefix">Name</label>
                                            </div>
                                            <div class="input-field">
                                                <i class="material-icons prefix">email</i>
                                                <input id="giverEmailInput" type="email" class="validate" />
                                                <label for="icon_telephone">Email</label>
                                            </div>
                                            <button class="btn waves-effect waves-light" id="giverSubmitButton"
                                                type="submit" name="action">
                                                Submit
                                                <i class="material-icons right">send</i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col s2">
                <p></p>
            </div>
        </div>
    </div>
</div>