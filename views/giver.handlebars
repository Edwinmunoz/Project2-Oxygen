{{> navbar}}
<h1 id="giverListTitle"> Choose Your Recipient </h1>

<div class="container" id="giverTable">
    <div class="row">
        <div class="col s2">
            <p></p>
        </div>
        <div class="col s8">
            <div class="row">
                {{#each gifts}}
                <table class="striped" class="responsive-table" class="highlight">

                    <thead id="listNames">
                        <tr>
                            {{!-- <th id="giverTableName">RECEIVER ID</th> --}}
                            <th id="giverTableName">RECEIVER:</th>
                            <th id="giverTableAddress">ADDRESS:</th>
                            <th id="giverTableGiftIdeas">WISH LISTS:</th>


                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            {{!-- <td id="receiverId">{{id}}</td> --}}
                            <td id="receiverFullName">{{Receiver}}</td>
                            <td id="receiverAddress">
                                {{Address}}
                            </td>
                            <td id="receiverGiftIdeas">
                                1: {{Gift1}} <br />
                                2: {{Gift2}}<br />
                                3: {{Gift3}}

                            </td>
                            <td id="receiverStory">{{Story}}</td>

                            <td id="giverInput">

                                <div class="container" id="giverInputTable">
                                    <form class="col s12" id="edit-giver" data-id="{{id}}"></form>


                                    <a href="/giver/{{id}}">
                                        <button class="btn btn-secondary green darken-4">GIVER</button></a>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                    {{!-- </table> --}}
            </div>
        </div>
        <div class="col s2">
            <p></p>
        </div>
        </td>
        </tr>
        </tbody>
        </table>
        {{/each}}
    </div>
</div>

<script type="text/javascript" src="/assets/js/updateGiver.js"></script>