{{> navbar}}
<style>
    #giverListTitle{
  font-family: "Elsie Swash Caps", cursive;
  font-size: 60px;
  text-align: center;
  padding-bottom: 5%;
}
</style>
<h1 id= "giverListTitle"> UPDATE GIVER'S INFORMATION </h1>
<div class="container" id="recieverPage" >
    <div class="row">
        <div class="col s12">
            <div class="row">
                <div class="container" id="receiverForm">
                    <form class="col s12"id="edit-giver" data-id="{{id}}">
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="Giver" type="text" class="validate" >
                                <label for="giverName">Giver Name</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input type="text" class="form-control" id="Email" >
                                <label for="Email" class="form-label">Email</label>
                            </div>
                        </div>
                        <button type ="submit" class="btn btn-primary" id= "Submit" >Update</button>
                        <button type ="button" class="btn btn-primary" id= "Back" onclick="backToList()" >BACK TO LIST</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container" id="recieverData">
            <div class="col s12" id="inputBackground">
   
                        <table class="striped" class="responsive-table" class="highlight">
                        <thead id="listNames">
                        <tr>
                            <th id="giverTableId">RECEIVER ID</th>
                            <th id="giverTableName">RECEIVER</th>
                            <th id="giverTableAddress">ADDRESS</th>
                            <th id="giverTableGiftIdeas">WISH LIST</th>
                            <th id="giverTableGiftIdeas">GIVER NAME</th>
                            <th id="giverTableGiftIdeas">GIVER EMAIL</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td id="giverId">{{id}}</td>
                            <td id="receiverFullName">{{Receiver}}</td>
                            <td id="giverAddress">
                                {{Address}}
                            </td>
                            <td id="giverGiftIdeas">
                                {{Gift1}} <br />
                                {{Gift2}}<br />
                                {{Gift3}}
                                
                            </td>
                            <td id="giverFullName">{{Giver}}</td>
                            <td id="giverEmail">{{Email}}</td>
              
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/assets/js/updateGiver.js"></script>

<script>
    function backToList (){
        window.location.replace("/list")
    }
</script>